{
  "model": {
    "vocab_size": 258,
    "max_seq_len": 2048,
    "n_layers": 24,
    "n_heads": 16,
    "d_model": 1024,
    "d_ff": 4096,
    "dropout": 0.1
  },
  "tokenizer": {
    "type": "byte",
    "bos_token_id": 256,
    "eos_token_id": 257
  },
  "data": {
    "dataset_path": "data/tiny.txt",
    "num_workers": 0
  },
  "training": {
    "batch_size": 128,
    "micro_batch_size": 8,
    "max_steps": 20000,
    "eval_interval": 10,
    "seed": 42,
    "device": "cuda"
  },
  "optimizer": {
    "type": "adamw",
    "lr": 0.00025,
    "betas": [
      0.9,
      0.95
    ],
    "weight_decay": 0.1
  },
  "scheduler": {
    "type": "cosine",
    "warmup_steps": 0
  },
  "generate": {
    "max_new_tokens": 256,
    "temperature": 0.7,
    "top_k": 50,
    "top_p": 0.9,
    "repetition_penalty": 1.05
  }
}